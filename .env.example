# Prismiq Environment Configuration
# Copy to .env and fill in your values

# ============================================================================
# Database Connection (choose ONE option)
# ============================================================================

# Option 1: Local PostgreSQL (native install or Postgres.app)
DATABASE_URL=postgresql://localhost:5432/prismiq_dev

# Option 2: Docker Compose (docker compose up -d)
# DATABASE_URL=postgresql://prismiq:prismiq_dev@localhost:5432/prismiq_dev

# Option 3: Neon (https://neon.tech - free tier)
# DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/prismiq_dev?sslmode=require

# Option 4: Supabase (https://supabase.com - free tier)
# DATABASE_URL=postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379/0

# Development settings
DEBUG=true
LOG_LEVEL=INFO
